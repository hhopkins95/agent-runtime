{
  "name": "@hhopkins/agent-runtime",
  "version": "0.1.0",
  "description": "Node.js runtime for orchestrating AI agents (Claude, Gemini) in isolated Modal sandboxes",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "sandbox",
    "README.md"
  ],
  "keywords": [
    "ai",
    "agent",
    "claude",
    "gemini",
    "modal",
    "runtime",
    "sandbox",
    "websocket",
    "streaming",
    "anthropic"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hhopkins/agent-service.git",
    "directory": "backend"
  },
  "homepage": "https://github.com/hhopkins/agent-service#readme",
  "bugs": {
    "url": "https://github.com/hhopkins/agent-service/issues"
  },
  "author": "Hunter Hopkins",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "tsc",
    "check-types": "tsc --noEmit",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "check": "pnpm run check-types && pnpm run lint"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.54",
    "@hono/node-server": "^1.14.2",
    "chokidar": "^4.0.3",
    "commander": "^14.0.0",
    "dotenv": "^17.2.2",
    "hono": "^4.7.11",
    "modal": "^0.5.4",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "socket.io": "^4.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@google/gemini-cli-core": "^0.16.0",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "tsdown": "^0.16.6",
    "tsx": "^4.19.2",
    "typescript": "^5.2.2"
  }
}
