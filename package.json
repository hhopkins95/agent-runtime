{
  "name": "agent-service-workspace",
  "version": "0.1.0",
  "private": true,
  "description": "Workspace for agent runtime packages",
  "scripts": {
    "build": "pnpm -r build",
    "build:backend": "pnpm --filter @hhopkins/agent-runtime build",
    "build:client": "pnpm --filter @hhopkins/agent-runtime-react build",
    "check": "pnpm -r check",
    "clean": "pnpm -r exec rm -rf dist",
    "dev:backend": "pnpm --filter @hhopkins/agent-runtime dev",
    "dev:client": "pnpm --filter @hhopkins/agent-runtime-react dev",
    "example:backend": "pnpm --filter @example/backend dev",
    "example:frontend": "pnpm --filter @example/frontend dev",
    "dev": "concurrently --names \"backend,client,ex-backend,ex-frontend\" --prefix-colors \"blue,magenta,green,cyan\" \"pnpm dev:backend\" \"pnpm dev:client\" \"wait-on backend/dist/index.js client/dist/index.js && pnpm example:backend\" \"wait-on backend/dist/index.js client/dist/index.js && pnpm example:frontend\"",
    "docs" : "npx @hhopkins/smart-docs ./docs"
  },
  "workspaces": [
    "backend",
    "client",
    "example/backend",
    "example/frontend"
  ],
  "devDependencies": {
    "concurrently": "^9.1.2",
    "typescript": "^5.7.2",
    "wait-on": "^8.0.1"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
