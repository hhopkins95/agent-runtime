{
  "name": "agent-service-workspace",
  "version": "0.1.0",
  "packageManager": "pnpm@9.12.5",
  "private": true,
  "description": "Workspace for agent runtime packages",
  "scripts": {
    "build": "pnpm -r build",
    "build:backend": "pnpm --filter @hhopkins/agent-runtime build",
    "build:client": "pnpm --filter @hhopkins/agent-runtime-react build",
    "check": "pnpm -r check",
    "clean": "pnpm -r exec rm -rf dist",
    "dev:backend": "pnpm --filter @hhopkins/agent-runtime dev",
    "dev:client": "pnpm --filter @hhopkins/agent-runtime-react dev",
    "example:backend": "pnpm --filter @example/backend dev",
    "example:frontend": "pnpm --filter @example/frontend dev",
    "dev": "turbo run dev",
    "docs": "npx @hhopkins/smart-docs ./docs",
    "publish:backend": "pnpm --filter @hhopkins/agent-runtime publish",
    "publish:client": "pnpm --filter @hhopkins/agent-runtime-react publish",
    "publish:all": "pnpm run publish:backend && pnpm run publish:client"
  },
  "workspaces": [
    "backend",
    "client",
    "example/backend",
    "example/frontend"
  ],
  "devDependencies": {
    "concurrently": "^9.1.2",
    "turbo": "^2.6.1",
    "typescript": "^5.7.2",
    "wait-on": "^8.0.1"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
